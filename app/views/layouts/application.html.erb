<!DOCTYPE html>
<html>
<head>
  <title>Hairfree</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <span>
    <div class="logo"><small><%= image_tag "fl.jpg" %></small></div>
    <h1>HAIRFREE!</h1>
  </span>
    <div class="nav">
        <% if session[:user_id] %>
          <a href="/logout">Log Out</a>
        <% else %>
            <span>
                <a href='/login'>login</a>
                <a href='/signup'>signup</a>
            </span>
            <p><a href='/oauth/connect'>Sign in with Instagram</a></p>
        <% end %>
    </div>

  <%= yield %>

</body>
</html>
