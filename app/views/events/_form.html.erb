<%= form_tag '/events' do |f| %>
  <%= label          :pic_url,     "Profile Photo"     %><br/>
  <%= image_tag      :pic_url      %>
  <%= label            :title,       "Event Title"       %>
  <%= text_field_tag :title        %>
  <%= label          :category,    "Event Category"    %>
  <%= select_tag     :category,    options_for_select([["brunch"],["social"],["panel"],["party"],["forum"], ["livestream"], ["podcasts"], ["concerts"], ["fundraiser"], ["photo/videoshoot"], ["other"] ])     %>
  <%= label          :location,    "Address"           %><br/>
  <%= text_field_tag :location     %><br/>
  <%= label          :date,        "Date"              %>
  <%= date_tag       :date         %>
  <%= label          :time,        "Time"              %>
  <%= date_tag       :time         %><br/>
  <%= label          :description, "Description"       %><br/>
  <%= text_field_tag :description                      %><br/>
  <%= submit_tag 'Submit!' %>
<% end %>


