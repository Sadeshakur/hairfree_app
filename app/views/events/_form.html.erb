<%= form_tag '/events' do |f| %>
  <%= f.label          :pic_url,   "Profile Photo"     %><br/>
  <%= f.url_field_tag  :pic_url    %>
  <%= label            :title,       "Event Title"       %>
  <%= f.text_field_tag :title        %>
  <%= f.label          :category,    "Event Category"    %>
  <%= f.select_tag     :category,    options_for_select([["brunch"],["social"],["panel"],["party"],["                               forum"], ["livestream"], ["podcasts"], ["concerts"], ["fundraiser"], ["photo/videoshoot"], ["other"] ])     %>
  <%= f.label          :location,    "Address"           %><br/>
  <%= f.text_field_tag :location     %><br/>
  <%= f.label          :date,        "Date"              %>
  <%= f.date_tag       :date         %>
  <%= f.label          :time,        "Time"              %>
  <%= f.date_tag       :time         %><br/>
  <%= f.label          :description, "Description"       %><br/>
  <%= f.text_field_tag :description                      %><br/>
  <%= f.submit_tag 'Submit!' %>
<% end %>


