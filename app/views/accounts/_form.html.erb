<%= form_tag '/accounts' do |f| %>
  <%= label            :full_name,   "Full Name"     %>
  <%= url_field_tag    :full_name,   %>
  <%= label            :born_on,     "Date of Birth"  %>
  <%= text_field_tag   :born_on,     %><br/>
  <%= label            :phone,       "Phone"           %>
  <%= phone_field_tag  :phone,       %><br/>
  <%= submit_tag 'Submit!' %>
<% end %>
