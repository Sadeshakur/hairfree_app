<%= form_tag '/accounts' do |f| %>
  <%= f.label            :f_name,      "First Name"     %>
  <%= f.url_field_tag    :f_name,      %>
  <%= f.label            :l_name,      "Last Name"      %>
  <%= f.text_field_tag   :l_name,      %><br/>
  <%= f.label            :born_on,     "Date of Birth"  %>
  <%= f.phone_field_tag  :phone,       %><br/>
  <%= f.label            :phone,       "Time"           %>
  <%= f.date_tag         :phone,       %><br/>
  <%= f.submit_tag 'Submit!' %>
<% end %>
